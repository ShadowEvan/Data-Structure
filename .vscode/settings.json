{
    "files.defaultLanguage": "c", // ctrl+N新建文件后默认语言
    "code-runner.runInTerminal": true, // 在终端中运行，允许交互，设置成“false”则会在“输出”中输出
    "code-runner.saveFileBeforeRun": true, // Run Code前保存文件
    "editor.snippetSuggestions": "top", // snippets代码优先显示补全
    "editor.formatOnType": true, // 输入时就进行格式化，默认触发字符较少，分号可以触发
    "clang.cflags": [ // 控制c语言静态检测的参数
        "--target=x86_64-w64-mingw",
        "-std=c11",
        "-Wall"
    ],
    "clang.cxxflags": [ // 控制c++静态检测时的参数
        "--target=x86_64-w64-mingw",
        "-std=c++17",
        "-Wall"
    ]
}